<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="70dp">
        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:padding="16dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agro-Yard"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Farmer John"
                    android:textColor="#CCFFFFFF" />
            </LinearLayout>
            
            <!-- Notification Icon with Badge -->
            <FrameLayout
                android:id="@+id/notification_icon_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp">
                
                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    android:src="@android:drawable/ic_popup_reminder" />
                
                <TextView
                    android:id="@+id/notification_badge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/notification_badge_background"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </FrameLayout>
            
            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_person" />
        </LinearLayout>
        
        <!-- Weather Forecast Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4079E4"
                android:orientation="horizontal"
                android:padding="16dp">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Forecast"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                        
                    <TextView
                        android:id="@+id/temperature_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partly Cloudy, 24Â°C"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                        
                    <TextView
                        android:id="@+id/humidity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity: 65%"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/wind_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind: 12 km/h"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_clock"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ideal for"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                        
                    <TextView
                        android:id="@+id/recommended_crops_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wheat, Tomatoes"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Category Grid (2x2) -->
        <GridLayout
            android:id="@+id/category_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">
            
            <!-- Dynamic content will be added here programmatically -->
            
        </GridLayout>
    </LinearLayout>
</ScrollView>