<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left Side - Date and Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Apr 2023"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#151B33"/>

            <TextView
                android:id="@+id/payment_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: Market Member"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/payment_purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose: Wheat Delivery"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Right Side - Amount and Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹12,500"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#151B33"/>

            <TextView
                android:id="@+id/payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 