<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_placeholder"
                android:background="@drawable/circle_orange"
                android:padding="4dp"
                android:contentDescription="Profile image" />

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="40sp"
                android:textColor="#151B33"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
                
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- My Posts Option -->
        <LinearLayout
            android:id="@+id/option_my_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_my_posts"
                android:contentDescription="My Posts"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Posts"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>
        
        <!-- My Profile Option -->
        <LinearLayout
            android:id="@+id/option_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="My Profile"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Profile"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>

        <!-- Share This App Option -->
        <LinearLayout
            android:id="@+id/option_share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_share"
                android:contentDescription="Share App"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share This App"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>

        <!-- Delivery Address Option - Only visible to MEMBER users -->
        <LinearLayout
            android:id="@+id/option_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:contentDescription="Delivery Address"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery Address"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>

        <!-- Contact Us Option -->
        <LinearLayout
            android:id="@+id/option_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mail"
                android:contentDescription="Contact Us"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Us"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>

        <!-- Guidelines Videos Option -->
        <LinearLayout
            android:id="@+id/option_guidelines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_video"
                android:contentDescription="Guidelines Videos"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guidelines Videos"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>

        <!-- Privacy Policy Option -->
        <LinearLayout
            android:id="@+id/option_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_privacy"
                android:contentDescription="Privacy Policy"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacy Policy"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>
        
        <!-- About Option -->
        <LinearLayout
            android:id="@+id/option_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info"
                android:contentDescription="About"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>

        <!-- Log Out Option -->
        <LinearLayout
            android:id="@+id/option_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/profile_option_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="Log Out"
                android:background="@drawable/icon_background_orange"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Log Out"
                android:textSize="20sp"
                android:textColor="#151B33"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>