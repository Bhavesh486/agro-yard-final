<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/bid_monitor_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Monitor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#151B33"
            android:layout_marginBottom="16dp"/>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Active Bids -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/active_bids_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Bids"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- Pending Bids -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/pending_bids_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_orange_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending Bids"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- Total Value -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹42,850"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#151B33"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Value"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Filter options -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/filter_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="14sp"
                android:background="@drawable/button_primary_bg"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/filter_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="14sp"
                android:background="@drawable/button_outline_bg"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/filter_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="14sp"
                android:background="@drawable/button_outline_bg"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/filter_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="14sp"
                android:background="@drawable/button_outline_bg"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/filter_notregistered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Registered"
                android:textSize="14sp"
                android:background="@drawable/button_outline_bg"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
        </HorizontalScrollView>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Product Bids"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#151B33"
            android:layout_marginBottom="12dp"/>

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/no_records_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Records Found"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <!-- Bids Container - will be populated dynamically -->
        <LinearLayout
            android:id="@+id/bids_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView> 